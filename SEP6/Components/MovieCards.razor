
<Card Style="width:300px;" Bordered Cover="coverTemplate">
	<ChildContent>
        <CardMeta Title="Avatar" Description="Here will be the director" />
    </ChildContent>
    <ActionTemplate>
        <CardAction><Rate Count="1" Character="@Favorite" Style="color:red" /></CardAction>
        <CardAction><Icon Type="like" OnClick="@(()=> OnClick("like"))" /></CardAction>
        <CardAction><Icon Type="dislike" OnClick="@(()=> OnClick("dislike"))" /></CardAction>
    </ActionTemplate>
</Card>



@code {
    RenderFragment<RateItemRenderContext> Favorite = (builder) =>
    @<Template>
        <Icon Type="heart" Theme="fill" />
    </Template>;
    RenderFragment coverTemplate = @<img alt="example" src="https://gw.alipayobjects.com/zos/rmsportal/JiqGstEfoWAOHiTxclqi.png" />;

    void OnClick(string icon)
    {
        Console.WriteLine($"icon {icon} is clicked");
    }
}
